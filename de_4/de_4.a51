ORG 0000H
	LJMP MAIN

N EQU 30H
	
ORG 0030H
MAIN:
	ACALL ADD_BCD
	
;-----------------
; INPUT:
	; R0-> BYTE THAP SO HANG DAU
	; R1-> BYTE THAP SO HANG THU 2
	; N -> SO BYTE 
; OUTPUT:
	; R0 -> BYTE THAP CUA KET QUA
	; C : BIT BAO TRAN CUA KET QUA
	ADD_BCD:
	CLR C
	LOOP:
		MOV A, @R0
		ADDC A, @R1	; A = @R0+@R1+C
		DA A
		MOV @R0, A	; CHUYEN KET QUA VAO @R0
		INC R0
		INC R1
	DJNZ N, LOOP
RET

END
	